<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvSplash">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mark_pro_heavy</item>
    </style>

    <style name="tvBold">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
    </style>

    <style name="tvMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
    </style>

    <style name="tvMediumOptions">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
    </style>

    <style name="tvRegular">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
    </style>
    
    <style name="tvDetailsSpecs">
        <item name="android:fontFamily">@font/mark_pro_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#B7B7B7</item>
    </style>

    <style name="hintTextAppearance" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#010035</item>
