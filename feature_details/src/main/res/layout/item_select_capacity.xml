<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="19dp">


    <ImageView
        android:id="@+id/ivCapacitySelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_btn_select_capacity"
         />

    <TextView
        android:id="@+id/tvCapacityValue"
        style="@style/tvBold"
        android:textSize="13sp"
        android:textColor="@color/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="128 GB"
        app:layout_constraintBottom_toBottomOf="@+id/ivCapacitySelect"
        app:layout_constraintEnd_toEndOf="@+id/ivCapacitySelect"
        app:layout_constraintStart_toStartOf="@+id/ivCapacitySelect"
        app:layout_constraintTop_toTopOf="@+id/ivCapacitySelect" />
</androidx.constraintlayout.widget.ConstraintLayout>