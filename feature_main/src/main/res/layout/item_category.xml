<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tabLayoutCircle"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:src="@drawable/ic_circle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tabIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/tabLayoutCircle"
        app:layout_constraintEnd_toEndOf="@+id/tabLayoutCircle"
        app:layout_constraintStart_toStartOf="@+id/tabLayoutCircle"
        app:layout_constraintTop_toTopOf="@+id/tabLayoutCircle"
        app:tint="@color/tab_layout_icon_color"
        tools:src="@drawable/ic_category_phone"

        />

    <TextView
        android:id="@+id/tabTV"
        style="@style/tvMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/tab_layout_icon_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tabLayoutCircle"
        app:layout_constraintStart_toStartOf="@id/tabLayoutCircle"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutCircle"
        tools:text="lorem" />

</androidx.constraintlayout.widget.ConstraintLayout>